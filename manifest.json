{
  "manifest_version": 3,
  "name": "NuTils",
  "description": "Utilitários para aplicação NuBank web",
  "version": "1.0",
  "icons": {
    "16": "imgs/nutils-16.png",
    "48": "imgs/nutils-48.png",
    "128": "imgs/nutils-128.png"
  },
  "content_scripts": [{
    "run_at": "document_start",
    "matches": ["https://*.nubank.com.br/*"],
    "js": [
      "js/utils.js",
      "js/generators/OfxGenerator.js",
      "js/generators/CsvGenerator.js",
      "js/bills.js"
    ]
  }],
  "web_accessible_resources": [
    {
      "resources": [ "js/xmlhttprequest-extra.js" ],
      "matches": ["https://*.nubank.com.br/*"]
    }
  ]
}
